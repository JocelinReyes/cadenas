#include<stdio.h>
#include<string.h>
int main(){
    int len, i, j;
    char cad[30];
    printf("Introduce una palabra");
    scanf("%s", cad);
    len=strlen(cad);
    for ( i = 0; i <=len; i++){
        for ( j = 1; j <=len; j++){
            printf("*");
        }
        
        printf("\n");
    }
    

}
